{
  "name": "任意网站侧边栏",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "sidePanel",
    "declarativeNetRequestWithHostAccess",
    "contextMenus",
    "storage",
    "scripting",
    "windows"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "csp_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "source/*",
        "script/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
